<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
        <!-- add windows executable -->
        <file>
            <source>${project.build.directory}/Timetable.exe</source>
            <outputDirectory>/</outputDirectory>
        </file>
		<!-- add startup script -->
		<file>
			<source>${project.build.directory}/timetable.sh</source>
			<outputDirectory>/</outputDirectory>
		</file>
        <!-- add mac/linux migration script -->
        <file>
            <source>${project.build.directory}/migrate.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <!-- add windows migration script -->
        <file>
            <source>${project.build.directory}/migrate.bat</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <!-- add readme -->
        <file>
            <source>${project.build.directory}/docbkx/html/readme.html</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <!-- add db changelog -->
        <file>
            <source>${project.build.directory}/db/master.xml</source>
            <outputDirectory>/db</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/db/liquibase.properties</source>
            <outputDirectory>/db</outputDirectory>
        </file>
	</files>
	<fileSets>
		<!-- add dependency libs -->
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
	</fileSets>
	<dependencySets>
		<!-- add jar -->
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>de.ronnyfriedland:timetable</include>
			</includes>
			<useProjectAttachments>true</useProjectAttachments>
		</dependencySet>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>de.ronnyfriedland:timetable</exclude>
            </excludes>
        </dependencySet>
	</dependencySets>

</assembly>